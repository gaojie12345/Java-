<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
         metadata-complete="true">

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>HelloCookie</servlet-name>
        <servlet-class>com.bite.cookie.a_hello.HelloCookie</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloCookie</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>RememberSrevlet</servlet-name>
        <servlet-class>com.bite.cookie.b_remember.RememberSrevlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RememberSrevlet</servlet-name>
        <url-pattern>/aaa</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Session</servlet-name>
        <servlet-class>com.bite.cookie.b_hello.Session</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Session</servlet-name>
        <url-pattern>/wo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Session2</servlet-name>
        <servlet-class>com.bite.cookie.b_hello.Session2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Session2</servlet-name>
        <url-pattern>/hi</url-pattern>
    </servlet-mapping>
</web-app>